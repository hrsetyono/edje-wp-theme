<ul class="post-archives post-archives--{{ style ? style : mods.archive_style }}">
{% for post in posts %}

  <li class="post-archive">
  {% for e in mods.archive_elements if e.enabled %}

    {# Post title #}
    {% if e.id == 'title' %}
      <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>

    {# Featured image #}
    {% elseif e.id == 'featured_image' and post.thumbnail %}
      <a href="{{ post.link }}" class="archive-figure  image-fit image-fit--{{ e.ratio }}" tabindex="-1">
        <img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.title }}">
      </a>

    {# Excerpt #}
    {% elseif e.id == 'excerpt' %}
      <p>{{ post.preview.length( e.word_count ).read_more('') }}</p>

    {# Post Meta #}
    {% elseif e.id == 'post_meta' %}
      {% include '_post-meta.twig' with { element: e, post: post }  %}

    {% elseif e.id == 'read_more_button' %}
      <a href="{{ post.link }}" class="button button--{{ e.style }}">
        {{ e.text }}
      </a>

    {% endif %}
  {% endfor %}
  </li>
  
  
{% else %}
  <li class="content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </li>
{% endfor %}
</ul>
