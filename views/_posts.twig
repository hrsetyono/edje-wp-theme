<ul class="post-archives" id="content" data-tile="3-2-1">
{% for post in posts %}

  <li class="post-archive">

    {# Post title #}
    <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>

    {% if post.thumbnail %}
      <a href="{{ post.link }}" class="archive-figure" tabindex="-1" data-image-fit="2:1">
        <img src="{{ post.thumbnail.src('medium') }}" alt="{{ post.title }}" loading="lazy">
      </a>
    {% endif %}

    {% if post.preview %}
      <p>{{ post.preview.length(20).read_more('') }}</p>
    {% endif %}

    {% include '_post-meta.twig' %}
  </li>
  
  
{% else %} 
  <li class="content-error">
    <h1>Sorry</h1>
    <p>We couldnâ€™t find any posts.</p>
  </li>
{% endfor %}
</ul>
