{% extends "layout.twig" %}
{% block content %}

{# Content #}
<article class="the-content">
  {% if post.thumbnail %}
    <!-- Featured Image -->
    <header class="wp-block-cover alignfull has-background-dim" style="background-image:url('{{ post.thumbnail.src('large') }}');">
      <div class="wp-block-cover__inner-container">
        <h1>{{ post.title }}</h1>
        {% include "partials/_post-meta.twig" %}
      </div>
    </header>
  {% else %}
    <header class="post-header">
      <h1>{{ post.title }}</h1>
      {% include "partials/_post-meta.twig" %}
    </header>
  {% endif %}

  {{ post.content }}  

  <footer class="post-author">
    {% include "partials/_author-info.twig" with { author: post.author } %}
  </footer>
</article>

{# Comments #}
<footer class="post-footer">
  <h-grid class="post-footer-grid"> <div class="large-4">

    {% include "partials/_related-posts.twig" %}
    {% include "partials/_comments.twig" %}
  </div> </h-grid>
</footer>


{% endblock %}
