<div class="post-meta">

  <span class="meta-categories">
    {% for c in post.categories %}
      <a href="{{ c.link }}"> {{ c.name }} </a>  
    {% endfor %}
  </span>

  <span class="meta-author">
    By {{ post.author.display_name }}
  </span>

  <time class="meta-date" datetime="{{ post.post_date | date('Y-m-d') }}">
    <i class="dashicons-before dashicons-calendar-alt"></i>
    {{ post.post_date | date }}
  </time>

  {% if post.comment_count > 0 %}
    <span class="meta-comments">
      <i class="dashicons-before dashicons-admin-comments"></i>
      <a href="{{ post.link }}#comments" class=""> {{ post.comment_count }} Comments </a>
    </span>
  {% endif %}

  {% if post.tags %}
    <span class="meta-tags">
      <i class="dashicons-before dashicons-tag"></i>
      {% for tag in post.tags %}
        <a href="{{ tag.link }}">{{ tag.name }}</a>
      {% endfor %}
    </span>
  {% endif %}

</div>
